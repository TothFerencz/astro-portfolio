---
import type { CollectionEntry } from 'astro:content';
import Socials from '../components/Socials.astro';
import BlogPosts from './BlogPosts.astro';
interface Props {
  posts: CollectionEntry<'blog'>[];
}

const { posts } = Astro.props;
---

<section class="pt-32 pb-32">
  <!-- HEADER max-w -->
  <div class="mx-auto max-w-7xl px-6">
    <header class="mb-24 grid items-start gap-16 md:grid-cols-2">
      <div>
        <p class="mb-6 flex items-center gap-3 text-sm">
          <span class="h-3 w-3 rounded-full bg-black"></span>
          Articles & Resources
        </p>

        <h1>
          Checkout our latest Articles & Resources.
        </h1>
      </div>
      <div />
    </header>
  </div>

  <!-- SOCIALS â€“ FULL WIDTH -->
  <Socials />

  
<BlogPosts posts={posts} />