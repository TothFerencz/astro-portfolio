---
import { getEntry } from 'astro:content';
import '../styles/global.css';

import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

/**
 * Global SEO defaults
 * seo.md kötelező, de TS szerint lehet undefined → fallback kötelező
 */
const seoEntry = await getEntry('seo', 'seo');

const seo = seoEntry?.data ?? {
  title: 'Toth Ferencz – Full Stack Developer Portfolio',
  description:
    'Toth Ferencz – Full Stack Developer portfolio. Clean Code, modern web development, Astro, frontend & backend projects.',
  canonical: 'https://tothferencz.com/',
  ogImage: 'https://tothferencz.com/og-image.jpg',
};

const {
  title = seo.title,
  description = seo.description,
  canonical = seo.canonical,
  ogImage = seo.ogImage,
} = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Primary SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonical} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Google Analytics (GA4) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-JLTVP8F380"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){window.dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-JLTVP8F380');
    </script>

    <meta name="generator" content={Astro.generator} />
  </head>

  <body class="antialiased">
    <Navbar />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>
